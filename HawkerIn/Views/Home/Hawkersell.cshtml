
@{
    ViewBag.Title = "Hawkersell";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hawkersell</h2>
<h6>A marketplace to buy or sell your new or used kitchen equipment.</h6>
<div class="search-container">
    <form>
        <div class="form-group" style="display:inline-flex;">
            <input type="text" class="form-control" style="width:500px;" placeholder="Searh for an item" /><button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<div class="image-container">
    <img style="width:100%" src="~/Content/Media/cooking-equip-banner.jpg" />
</div>

<div class="row">
    <div class="col-md-2">
        <h4>Shop by Category</h4>
        <ul class="list-group">
            <li class="list-group-item"><a href="#">Stainless Steel</a></li>
            <li class="list-group-item"><a href="#">Warming & Heating</a></li>
            <li class="list-group-item"><a href="#">Food Processing & Washing</a></li>
            <li class="list-group-item"><a href="#">Commercial Oven</a></li>
            <li class="list-group-item"><a href="#">Commercial Refrigeration</a></li>
        </ul>
    </div>
    <div class="col-md-10">
        <div class="market-section">
            <div class="flex-wrapper">
                @for (int i = 1; i < 6; i++)
                {
                    <div class="card product-card">
                        @{
                            string imgpath = "/Content/Media/KitchenEquipment/ke" + i + ".jpg";
                        }
                        <img style="width:100%" src='@imgpath' />
                        <h5>Product Name</h5>
                        <p>SGD 5000</p>
                    </div>
                            }


            </div>
        </div>
    </div>

</div>
